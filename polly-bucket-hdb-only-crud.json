{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCRUDOnlyForPollyBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning",
        "s3:GetBucketAcl",
        "s3:GetBucketPolicy",
        "s3:GetBucketCors",

        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:AbortMultipartUpload",
        "s3:ListBucketMultipartUploads",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:aws:s3:::demo-hdb-edumgt-example",
        "arn:aws:s3:::demo-hdb-edumgt-example/*"
      ]
    },
    {
      "Sid": "DenyAnyS3AccessExceptPollyBucket",
      "Effect": "Deny",
      "Action": "s3:*",
      "NotResource": [
        "arn:aws:s3:::demo-hdb-edumgt-example",
        "arn:aws:s3:::demo-hdb-edumgt-example/*"
      ]
    }
  ]
}
